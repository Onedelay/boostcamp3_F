<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable name="viewmodel"
                  type="com.boostcamp.travery.mapservice.TrackingViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".mapservice.TrackingActivity">

        <fragment
                android:id="@+id/map_trackingActivity"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include"
                tools:context=".MapsActivity"/>

        <include
                android:id="@+id/include"
                layout="@layout/toolbar"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_suggest"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="openSuggestDialog"
                android:src="@drawable/ic_add_alert_black_24dp"
                app:visibility="@{viewmodel.isService}"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_seggest_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="0"
                app:visibility="@{viewmodel.isService}"
                android:textColor="@color/colorAccent"
                app:layout_constraintRight_toRightOf="@+id/btn_suggest"
                app:layout_constraintTop_toTopOf="@+id/btn_suggest"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_midMarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/plan_smarker_start"
                app:visibility="@{!viewmodel.isService}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_myLocation"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/map_current_button"
                android:onClick="gotoMyLocation"
                app:layout_constraintVertical_bias="0.8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_directions_run_black_24dp"
                android:onClick="startService"
                app:backgroundTint="@color/whiteBlue"
                app:fabCustomSize="90dp"
                app:maxImageSize="60dp"
                app:visibility="@{!viewmodel.isService}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_save_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:src="@drawable/ic_add_white_24dp"
                android:onClick="saveUserAction"
                android:layout_marginEnd="10dp"
                app:backgroundTint="@color/whiteBlue"
                app:fabSize="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:visibility="gone"
                android:id="@+id/btn_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_stop_black_24dp"
                android:onClick="stopService"
                app:backgroundTint="@color/whiteBlue"
                app:maxImageSize="60dp"
                app:fabCustomSize="90dp"
                app:visibility="@{viewmodel.isService}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                app:visibility="@{viewmodel.isService}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_stop"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <include
                android:visibility="gone"
                android:id="@+id/footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="0.6"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                layout="@layout/item_dialog_footer"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
