<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#fff</item>
        <item name="android:actionMenuTextColor">#fff</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="dialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:textColor">@color/blackBlue</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- 스피너 테마 -->
    <style name="AppTheme.Spinner">
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <!-- 이미지 피커 테마 -->
    <style name="ImagePickerTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ef_colorAccent</item>
    </style>

    <!-- 서치뷰 테마 -->
    <style name="SearchView" parent="Theme.MaterialComponents.DayNight">
        <item name="editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>
</resources>
